//- Все примеси в этом файле должны начинаться c имени блока (team)

mixin team(image, name, checkbox, isLiked, amount, place, exp)
	.team__card
		.team__card-header
			img.team__card-avatar(src='img/img__avatar_' + image + '.jpg', alt='')
			.team__card-name!= name
		img.team__card-image(src='img/img__team_' + image + '.jpg', alt='')
		.team__card-info
			label.team__card-like
				input.like-checkbox(type='checkbox', checked= !!checkbox)
				.like-icon
					svg.below(viewBox='0 0 30 27')
						path(d='M20.544 1.5C25.3065 1.5 28.5 5.97 28.5 10.1325C28.5 18.582 15.2415 25.5 15 25.5C14.7585 25.5 1.5 18.582 1.5 10.1325C1.5 5.97 4.6935 1.5 9.456 1.5C12.1785 1.5 13.9665 2.8575 15 4.0665C16.0335 2.8575 17.8215 1.5 20.544 1.5Z' fill='#E01636' stroke-width='2')
					svg.front(viewBox='0 0 32 27')
						path(d='M20.544 1.5C25.3065 1.5 28.5 5.97 28.5 10.1325C28.5 18.582 15.2415 25.5 15 25.5C14.7585 25.5 1.5 18.582 1.5 10.1325C1.5 5.97 4.6935 1.5 9.456 1.5C12.1785 1.5 13.9665 2.8575 15 4.0665C16.0335 2.8575 17.8215 1.5 20.544 1.5Z' stroke='#E01636' stroke-width='2')
			if isLiked === true
				.team__card-message Понравилось вам и ещё #[span #{amount}]
			else if isLiked === false
				.team__card-message Понравилось #[span #{amount}]
			else
			if place === 'ex'
				.team__card-descr Машинист экскаватора
					br
					| Стаж работы — #{exp}
			else if place === 'bul'
				.team__card-descr Бульдозерист
					br
					| Стаж работы — #{exp}
