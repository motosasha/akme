extends ../pug/layout_default.pug

block pageMain
	section.hero
		.grid
			.hero__inner
				.hero__info
					h1.hero__title
						| Аренда новой
						br
						| спецтехники
					.hero__bubble с экипажем сроком от 1 месяца
				a.hero__frame(data-scroll href="#equipment")
					svg.hero__frame-icon
						use(xlink:href='img/svgSprite.svg#icon__arrow_down')
					.hero__frame-title Новая техника
					.hero__frame-date 2020–2021 гг.
	section.about
		.grid
			.about__inner
				.about__grid
					+about-items([
						{icon: 'dozer', label: 'Современность', title: 'Новая современная техника HITACHI и KOMATSU 2020/2021 годов выпуска'},
						{icon: 'construction', label: 'Качество', title: 'Большой опыт организации непрерывного цикла круглосуточной работы'},
						{icon: 'satellite', label: 'Безопасность', title: 'Вся техника оснащена ССМ Глонасс и системой видеонаблюдения'},
						{icon: 'docs', label: 'Сертифицированность', title: 'Работаем на объектах ПАО «Транснефть», со всеми необходимыми аттестациями'},
						{icon: 'collaborate', label: 'Доверие', title: 'Объекты федерального значения (трасса М12 Москва-Казань, 11 единиц техники круглосуточно)'},
						{icon: 'vagon', label: 'Забота', title: 'Есть собственные жилые вагон-дома для проживания сотрудников'}
					])
	section.equipment.section
		#equipment.section__anchor
		.grid
			.section__inner.equipment__inner
				.section__label Оборудование
				h2.section__title Наша техника
				.equipment__triggers
					.equipment__trigger.equipment__trigger_active(data-tab="excavator") Экскаваторы
					.equipment__trigger(data-tab="bulldozer") Бульдозеры
				.equipment__slider-wrap
					.equipment__tab.equipment__tab_active(data-target='excavator')
						.swiper.equipment__slider.equipment__slider_excavator
							.swiper-wrapper
								.swiper-slide
									.equipment__card
										+equipment(
											[
												{image: '01_01'},
												{image: '01_02'}
											],
											'Экскаватор Hitachi ZX200-5G',
											'20 тн / 1 куб ковш',
											'2020 г. в.',
											[
												{number: 'г/н АВ 5147 16'},
												{number: 'г/н АВ 6402 16'}
											]
										)
								.swiper-slide
									.equipment__card
										+equipment(
											[
												{image: '02_01'},
												{image: '02_02'},
												{image: '02_03'},
												{image: '02_04'}
											],
											'Экскаватор Hitachi ZX240LC-5G',
											'24 тн / 1,4 куб ковш',
											'2021 г. в.',
											[
												{number: 'г/н АВ 8285 16'},
												{number: 'г/н АВ 8286 16'},
												{number: 'г/н АВ 8633 16'},
												{number: 'г/н АВ 8735 16'},
											]
										)
								.swiper-slide
									.equipment__card
										+equipment(
											[
												{image: '03_01'},
												{image: '03_02'},
												{image: '03_03'},
												{image: '03_04'}
											],
											'Экскаватор Hitachi ZX330-5G',
											'34 тн / 1,6 куб ковш',
											'2021 г. в.',
											[
												{number: 'г/н АВ 8360 16'},
												{number: 'г/н АВ 8401 16'},
												{number: 'г/н АВ 8402 16'},
												{number: 'г/н АВ 8803 16'},
											]
										)
						.swiper-button-next.equipment__slider-next.equipment__slider-next_excavator
							svg.swiper-button-icon
								use(xlink:href='img/svgSprite.svg#icon__arrow_left')
						.swiper-button-prev.equipment__slider-prev.equipment__slider-prev_excavator
							svg.swiper-button-icon
								use(xlink:href='img/svgSprite.svg#icon__arrow_right')
					.equipment__tab(data-target='bulldozer')
						.swiper.equipment__slider.equipment__slider_bulldozer
							.swiper-wrapper
								.swiper-slide
									.equipment__card
										+equipment(
											[
												{image: '04_01'},
												{image: '04_02'},
												{image: '04_03'},
											],
											'Бульдозер Komatsu D65EX-16',
											'21 тн / 211 л. с.',
											'2021 г. в.',
											[
												{number: 'г/н АВ 8571 16'},
												{number: 'г/н АВ 8572 16'},
												{number: 'г/н АВ 8735 16'},
											]
										)
						.swiper-button-next.equipment__slider-next.equipment__slider-next_bulldozer
							svg.swiper-button-icon
								use(xlink:href='img/svgSprite.svg#icon__arrow_left')
						.swiper-button-prev.equipment__slider-prev.equipment__slider-prev_bulldozer
							svg.swiper-button-icon
								use(xlink:href='img/svgSprite.svg#icon__arrow_right')
	section.team.section
		#team.section__anchor
		.grid
			.section__inner.team__inner
